<?xml version="1.0" encoding="UTF-8"?>
<Addin id = "VisualStudioMac.CreateGuid">
    
    <Header>
        <Name>Create Guid Addin</Name>
        <Description>Create Guid Addin for Visual Studio for Mac</Description>
        <Author>itadam@gmail.com</Author>
        <Copyright>itadam@gmail.com</Copyright>
        <Version>0.0.1</Version>
        <Url>https://github.com/itadam/VS4Mac-CreateGuid</Url>
    </Header>
    
    <Extension path="/MonoDevelop/Ide/Commands">
        <Command id="VisualStudioMac.CreateGuid.Commands.CreateGuidCommand" 
                 _label="Create Guid" 
                 defaultHandler="VisualStudioMac.CreateGuid.CreateGuidHandler" 
                 />
    </Extension>
    
    <Extension path="/MonoDevelop/Ide/MainMenu/Tools">
        <CommandItem id="VisualStudioMac.CreateGuid.Commands.CreateGuidCommand" insertafter= "ToolsSection" />
    </Extension>
</Addin>
